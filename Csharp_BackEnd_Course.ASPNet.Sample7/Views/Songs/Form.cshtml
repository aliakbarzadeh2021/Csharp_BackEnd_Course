@model Example6._2._1.Models.Song
@{ 
    Layout = "_layout";
}

<form asp-controller="Songs" asp-action="Add" method="post">
    <div class="form-group">
        <input type="text" name="Title" asp-for="Title" placeholder="Title"  class="form-control"/>
    </div>
    <div class="form-group">
        <input type="text" name="Artist" asp-for="Artist" placeholder="Artist" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="text" name="Album" asp-for="Album" placeholder="Album" class="form-control"/>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Add</button>
    </div>
</form>